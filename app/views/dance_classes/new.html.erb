
<h1>Create Dance Class: </h1>
<br>
<br>
<form method="POST" action="/dance_classes">
<p>Style:</p>
<select name="style_id"> #name here is the key in the params hash
<% @styles.each do |style|%>
    <option value="<%= style.id %>"><%= style.name %></option>
    <% end %>
</select>
<br>
<br>
<p>Level: <input type="text" name="level"/></p>
<br>
<p>Teacher: <input type="text" name="teacher"/></p>
<br>
<p>Class Name: <input type="text" name="name"/></p>
<br>
<p>Class Description: <input type="text" name="description"/></p>
<br>
<p>Studio:</p>
<select name="studio_id"> #name here is the key in the params hash
<% @studios.each do |studio|%>
    <option value="<%= studio.id %>"><%= studio.name %></option>
    <% end %>
</select>
<br>
<br>
<br>
<br>
<input type="submit" value= "Create Dance Class" id= "submit"/>
</form>
